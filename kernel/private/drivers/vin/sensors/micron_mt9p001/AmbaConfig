menu "Ambarella Sensor MT9PXXX 5M Configuration"
depends on CONFIG_SENSOR_MT9P001 || CONFIG_SENSOR_MT9P401 || CONFIG_SENSOR_MT9P031

config CONFIG_SENSOR_MT9PXXX_ENABLE_PLL
	bool "Enable Micron MT9PXXX on chip PLL"
	default y
	help
		Enable Micron MT9PXXX on chip PLL.

config CONFIG_SENSOR_MT9PXXX_IO_1_8
	bool "Micron MT9PXXX IO 1.8V"
	default n
	help
		Micron MT9PXXX IO 1.8V.

endmenu

