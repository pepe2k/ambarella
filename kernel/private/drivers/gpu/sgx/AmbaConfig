choice
	prompt "SGX DDK Version"
	default CONFIG_SGX_DDK_1_6
	depends on BUILD_AMBARELLA_GPU
	help
		Select SGX DDK Version.

config CONFIG_SGX_DDK_1_5
	bool "DDK 1.5"
	help
		SGX DDK 1.5

config CONFIG_SGX_DDK_1_6
	bool "DDK 1.6"
	help
		SGX DDK 1.6

config CONFIG_SGX_DDK_1_7
        bool "DDK 1.7"
        help
                SGX DDK 1.7

config CONFIG_SGX_DDK_1_8
        bool "DDK 1.8"
        help
                SGX DDK 1.8

endchoice


